@model OTAS2.Domain.Entities.Students

@{
    ViewBag.Title = "Details";
}

@section Head
{
<script type="text/javascript">
    function Redirect() {
        var url = '@Html.Raw(Url.Action("Summary", "Main"))';

        document.studentDetails.action = url;
        document.studentDetails.submit();
    }
</script>
 
}
<br /><br />
<h3 style="color:rgb(53, 113, 190)"> Please make any necessary changes :</h3>
<div class="clearfloat">&nbsp;</div>
<br />
<form action = "" name="studentDetails" id="studentDetails" method="post" enctype="multipart/form-data">

<div class="box fltlft" style="width:45%">
    
    <label>
        <span>USN</span>
        <input type="text" class="input_text" name="USN" id="USN" value="@Model.USN" readonly="readonly" />        
    </label>

     <label>
        <span>Name</span>
        <input type="text" class="input_text" name="name" id="name" value="@Model.Name" />        
    </label>

    <label>
        <span>Address</span>
          
        <textarea class="input_text" name="add" id="add" value="@Model.Address"> </textarea>
    </label>
    <label>
        <span>Phone No</span>
        <input type="text" class="input_text" name="ph" id="ph" value="@Model.Phone" />        
    </label>
    <label>
        <span>E-mail</span>
        <input type="text" class="input_text" name="email" id="email" value="@Model.email" />        
    </label>
</div>

<div class="box fltrt" style="width:45%">
    
    <label>
        <span>Semester</span>
        <input type="text" class="input_text" name="sem" id="sem" value="@Model.sem" readonly="readonly"/>        
    </label>
    <label>
        <span>Section</span>
        <input type="text" class="input_text" name="sec" id="sec" value="@Model.Sec" readonly="readonly"/>        
    </label>
    <label>
        <span>Department</span>
        <input type="text" class="input_text" name="deptId" id="deptId" value="@Model.DeptID" readonly="readonly"/>        
    </label>
    @if(Model.Elective1Name != null)
    {
        <label>
            <span>Elective 1</span>
            <input type="text" class="input_text" name="elec1Id" id="elec1Name" value="@Model.Elective1Name" readonly="readonly" />        
        </label>
    }
    @if(Model.Elective2Name != null)
    {
        <label>
            <span>Elective 2</span>
            <input type="text" class="input_text" name="elec2Id" id="elec2Name" value="@Model.Elective2Name" readonly="readonly"/>        
        </label>
    }
 </div>   

 <div class="clearfloat">&nbsp;</div> 
 <br /><br />
 <div class="fltrt">
    <label>        
        <input type="button" name="button" id="button" value="Continue" onclick="Redirect()" class="submitButton"/>        
    </label>
   </div>
</form>
